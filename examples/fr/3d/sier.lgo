# Commande principale: sierpinski 5
pour sier :p :long
 soit "p :p-1
 soit "long :long / 2
 si :p > 0 [
   # 3 motifs de base
  repete 3 [sier :p :long av :long*2 td 120]
    rg :angle    td 60 av :long tg 60 rd :angle 
    sier :p :long
    rg :angle td 60 re :long tg 60 rd :angle
]
 si :p = 0 [
  pyramide 2*:long
]
fin


